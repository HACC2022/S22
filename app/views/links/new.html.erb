<% provide(:title, "Create a Short URL") %>

<div class="container">
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h5>A shortened URL could not be created.</h5>
      <ul>
        <% @link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      </div>
    </div>

  <% end %>
  <%= form_with model: @link do |f| %>
    <div class="row">
      <%= f.label :original_url, "Generate a short URL from any URL", class: 'form-label'  %>
      <%= f.text_field :original_url, class: 'form-control form-control-lg', placeholder:'Paste your URL here...https://www.example.com/a/b/c' %>
    </div>
    <br>
    <div class="row col-6 mx-auto">
      <%= f.submit "Create a shortened URL!", class: 'btn btn-lg btn-primary' %>
    </div>
<% end %>
</div>
